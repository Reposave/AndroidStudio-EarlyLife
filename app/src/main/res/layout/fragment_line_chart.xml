<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LineChartFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-3dp"
            android:text="Shapes help a child develop elon musk level cognition."
            android:textColor="#000000"
            android:textSize="18dp"></TextView>
            -->


        <RelativeLayout
            android:id="@+id/hours_spent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="0dp"
                android:text="Hours Spent "
                android:textSize="20dp"></com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="29dp"
                android:text="24"
                android:textColor="#000000"
                android:textSize="70dp"></com.google.android.material.textview.MaterialTextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/num_correct"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/hours_spent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="122dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Correct "
                android:textSize="20dp"></com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="29dp"
                android:text="37"
                android:textColor="#000000"
                android:textSize="70dp"></com.google.android.material.textview.MaterialTextView>
        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="245dp"
            android:layout_height="195dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/shapes"></com.google.android.material.imageview.ShapeableImageView>

        <Button
            android:id="@+id/btn_individual_activity"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/num_correct"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="299dp"
            android:text="More"></Button>

    </RelativeLayout>

</FrameLayout>